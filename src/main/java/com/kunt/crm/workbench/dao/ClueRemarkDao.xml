<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kunt.crm.workbench.dao.ClueRemarkDao">
    <insert id="saveRemark">
        insert into tbl_clue_remark(
            id,
            noteContent,
            createTime,
            createBy,
            editFlag,
            clueId
        )
        values (
                   #{id},
                   #{noteContent},
                   #{createTime},
                   #{createBy},
                   #{editFlag},
                   #{clueId}
               )
    </insert>
    <update id="updateRemark">
        update tbl_clue_remark set noteContent=#{noteContent},editBy=#{editBy},editTime=#{editTime},editFlag=#{editFlag}
        where id=#{id}
    </update>

    <delete id="deleteById">
        delete
        from tbl_clue_remark
        where id = #{id}
    </delete>
    <select id="getRemarkListByCid" resultType="ClueRemark">
        select *
        from tbl_clue_remark
        where clueId = #{cId}
    </select>

    <delete id="deleteByAids">
        delete
        from tbl_clue_remark
        where clueId in
        <foreach collection="array" item="cid" open="(" close=")" separator=",">
            #{cid}
        </foreach>
    </delete>

    <select id="getCountByAids" resultType="int">
        select count(*) from tbl_clue_remark
        where clueId in
        <foreach collection="array" item="cid" open="(" close=")" separator=",">
            #{cid}
        </foreach>
    </select>
	
  	
</mapper>

































